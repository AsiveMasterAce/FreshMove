@model IEnumerable<FreshMove.Models.users.Customer>

@{
    ViewData["Title"] = "List of Customers";
}


<div class="container-fluid mb-4 mt-4 mx-5">
    <h2 class="mb-5" style="font-weight:600; color:var(--Green);">Customers</h2>

    <div class="mb-5">
        <h4 style="font-weight:600;">List of Customers </h4>
    </div>

    @if (Model.Count()!=0)
    {


        <table class="table">
            <thead>
                <tr>
                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        E Mail
                    </th>
                    <th>
                        Gender
                    </th>
                    <th>
                        Race
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.FirstName
                        </td>
                        <td>
                            @item.LastName
                        </td>
                        <td>
                            @item.Email
                        </td>
                        <td>
                            @item.Gender
                        </td>
                        <td>
                            @item.Race
                        </td>
                        <td>
                            <a asp-action="" asp-controller="" asp-route-id="@item.Id"> <i class="bi bi-bar-chart-fill"></i> </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            No Customers Available
        </div>
    }


</div>

