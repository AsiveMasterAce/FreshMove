@model List<FreshMove.Models.Cart.Cart>
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FreshMove</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/LandingSlide.css" asp-append-version="true" />
    <!-- Option 1: Include in HTML -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css" integrity="sha384-b6lVK+yci+bfDmaY1u0zE8YYJt0TZxLEAFyYSLHId4xoVvsrQu3INevFKo+Xir8e" crossorigin="anonymous" />
    <link rel="stylesheet" href="~/FreshMove.styles.css" asp-append-version="true" />
</head>
<body class="py-5">

    <div class="container align-self-center mt-5">
    <div class="row p-2">

            <div class="col-6 bg-grey rounded-top p-4 px-2 parent-container">
              <div class="row mt-3">

                    <div class="col"><h4><b>Shopping Cart</b></h4></div>
                    <div class="col align-self-center text-right text-muted">No. items: </div>
                    <div class="px-2">
                        <hr class="mt-2" />
                    </div>
                  
               </div>
             
                <div class="alert alert-warning" role="alert">
                    The List of Products is Empty
                </div>
        
                <div class="button-container">

                    <a class="btn btn-light w-100 start-0" asp-action="" asp-controller=""> <i class="bi bi-arrow-left"></i> Back To Shop</a>
                </div>
             
        
       </div>
       <div class="col-6 bg-LightBlue rounded-top h-75 p-5">
            <div class="mt-4">

                    <div class="col text-center"><h4><b>Summary</b></h4></div>
                    <hr />


                    <p class ="text-muted">Items: </p>

                    <div class="mt-4">
                     
                     <h5>Shipping</h5>

                        <select name="shipping" id="shipping" class="form-control rounded">
                            <option value="">Standard-Delivery-R50.00</option>
                            <option value="">Post Office-R21.00</option>
                            <option value="">DHL Courier-R30.00</option>
                        </select>
                    </div>
                   
                    <div class="mt-4">
                     
                     <h5>Promo code</h5>
                     <input asp-action="" asp-controller="" class="form-control"/>
              
                    </div>
                    <div class="mt-5">
                        <div class="mt-5">

                          <hr />
                         </div>
                    </div>
                    <div class="mt-3">
                        <h5 class="text-muted">Total: 00:00</h5>

                       
                    </div>
                   <div class="mt-5">

                        <a class="btn btn-black w-100" asp-action="" asp-controller="">Proceed</a>
                   </div>
            </div>

       </div>
      


    </div>


          

   </div>

</body>
</html>
