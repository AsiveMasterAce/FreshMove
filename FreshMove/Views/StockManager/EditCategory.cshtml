@model FreshMove.Models.categories.EditCategoryVM

@{
    ViewData["Title"] = "EditCategory";
}

<div class="container mt-5">
    <form asp-action="EditCategory" class="mb-4" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

             <h1 class=""> Edit Category</h1>
             
             <input asp-for="Id" class="form-control" value="@Model.Id" hidden/>
             <input asp-for="ExistingImage" value="@Model.ExistingImage" hidden/>
               
           
            <div class="form-group mb-4">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
             <div class="form-group mb-4">
                 <div>
                 <img src="~/category/@Model.ExistingImage" alt="@Model.Name +@Model.Description" height="120px" width="120px" class="" />
                 </div>
             
                <label asp-for="categoryImage" class="control-label"></label>
                <input asp-for="categoryImage" class="form-control" type="file" accept="image/*"/>
                <span asp-validation-for="categoryImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
                 <a class="btn btn-danger" asp-action="Categories" asp-controller="StockManager">Back</a>
            </div>
        </form>
</div>




