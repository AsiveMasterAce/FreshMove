@model FreshMove.Models.ViewModels.Shop.ShopViewModel
@{
    ViewData["Title"] = "Shop";
}

<div class="container mb-4">

    <h1 class="mt-2 text-center fw-bold"> Shop With Us</h1>

    <div class="row mb-4 mt-4">

        <div class="col-md-6">

            <div class="shadow rounded-3 p-1 bg-grey">

                <div class="row justify-content-center">
                    <div class="col-6 mt-3 p-3">
                        <div class="p-3 py-2">
                            <h4> Vegitables</h4>
                            <p class="text-danger mt-3"> 20% Off on fresh Veggies </p>
                            <a class="btn btn-black mt-5">Shop Now</a>
                        </div>
                       
                    </div>

                    <div class="col-6">

                        <img src="~/img/Veggie12.png" class="w-75" />
                    </div>
                </div>

            </div>
            <div class="shadow rounded-3 p-1 mt-5 bg-grey">

                <div class="row justify-content-center">
                    <div class="col-6 mt-3 p-3">
                        <div class="p-3 py-2">
                            <h4> Fresh Fruit</h4>
                            <p class="text-danger mt-3"> 10% Off on fresh Fruit </p>
                            <a class="btn btn-black mt-5">Shop Now</a>
                        </div>

                    </div>

                    <div class="col-6 py-4">

                        <img src="~/img/Fruit1.png" class="w-75" />
                    </div>
                </div>

            </div>

        </div>

        <div class="col-md-6 shadow rounded-3 bg-grey">

            <div class="row">


                <div class="col-6 mt-3">

                    <img src="~/img/Meet12.png" class="w-100" />
                </div>
               
                 <div class="col-6 mt-5">

                    <h2 class="mt-4"> Meat & Frozens</h2>
                    <p class="mt-3"> Get our beautiful fresh cuts at an amazing deal at a low price</p>
                    <p class="text-danger mt-3"> 20% Off on our meat deals </p>
                    <a class="btn btn-black mt-5 btn-lg">Shop Now</a>
                  </div>
          
          

            </div>
            
        </div>

    </div>


</div>


<div class="container mt-4">

    <div class="col-4">

        <div class="input-group mt-5">
            <input type="search" class="form-control rounded" placeholder="Search Products" aria-label="Search" aria-describedby="search-addon" />
            <button type="button" class="btn btn-outline-primary">search</button>
        </div>
    </div>
   

    <div class="col-2 mt-3 mb-2">

        <h4 class="fw-light bg-darkGrey p-2 rounded">
            <svg xmlns="http://www.w3.org/2000/svg" width="1.2em" height="1.2em" fill="currentColor" class="bi bi-list-ul" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M5 11.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zm-3 1a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm0 4a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm0 4a1 1 0 1 0 0-2 1 1 0 0 0 0 2z" />
            </svg> 
            
             Filter
        </h4>
    </div>
    <div class="d-flex mt-3">

        <div class="bg-black rounded p-2 m-2">

            <a class="text-white text-decoration-none" asp-action="" asp-controller="">All</a>
        </div> 
        <div class="bg-black rounded p-2 m-2">

            <a class="text-white text-decoration-none" asp-action="" asp-controller="">Vegitables</a>
        </div>       
        <div class="rounded p-2 m-2 bg-black">

            <a class="text-white text-decoration-none" asp-action="" asp-controller="">Fruit</a>
        </div>   
        <div class="rounded p-2 m-2 bg-black">

            <a class="text-white text-decoration-none" asp-action="" asp-controller="">Meat & Frozen</a>
        </div>

    </div>

   
</div>

<div class="container">

    @if (Model.products.Count()!= null)
    {

        <h3 class="text-center fw-bold">Products</h3>
        <div class="row">

            <div class="mt-4">
                <div class="row text-center">
                    @foreach (var product in Model.products)
                    {
                        <div class="col-3 p-2 bg-LightBlue m-1 rounded">
                            <img src="~/product/@product.productImage" alt="@product.Name +@product.Description" class="card-img-top" />
                            <div class="card-body">

                                <h3 class="fw-bold text-capitalize">@product.Name</h3>
                                <h4>R @product.Price</h4>

                              
                               <div class="py-2">
                              
                                   <a class="btn btn-black">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-heart-fill" viewBox="0 0 16 16">
                                            <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z" />
                                        </svg>

                                   </a>
                                    <a class="btn btn-black">

                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bag" viewBox="0 0 16 16">
                                            <path d="M8 1a2.5 2.5 0 0 1 2.5 2.5V4h-5v-.5A2.5 2.5 0 0 1 8 1zm3.5 3v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4h-3.5zM2 5h12v9a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V5z" />
                                        </svg>
                                        Add To Bag
                                    </a>
                                </div>
                              
                            </div>

                        </div>

                    }

                </div>




            </div>


        </div>

    }
    else
    {

        <div class="alert alert-light" role="alert">
            We dont have products Yet
        </div>


    }

</div>