@using FreshMove.Constants;
@model FreshMove.Models.users.ApplicationUser;

@{
    ViewData["Title"] = "Admin";
    Layout = "~/Views/Shared/_AuthUserLayoutcshtml.cshtml";
}

<div class="container">

    <form asp-action="Admin" class="p-5">

        <h1 class="text-center mb-4" style="font-weight:800; color:var(--Green)"> Register Admin</h1>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row mb-4"> 

                <div class="col-6 form-group">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="col-6 form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="PhysicalAddress" class="control-label"></label>
                <input asp-for="PhysicalAddress" class="form-control" />
                <span asp-validation-for="PhysicalAddress" class="text-danger"></span>
            </div>
            <div class="row mb-4">
                <div class="col-6 form-group">
                    <label asp-for="Gender" class="control-label"></label>
                    <select asp-for="Gender" class="form-control" asp-items="Html.GetEnumSelectList<Gender>()"></select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <div class="col-6 form-group">
                    <label asp-for="Race" class="control-label"></label>
                   <select asp-for="Race" class="form-control" asp-items="Html.GetEnumSelectList<Race>()"></select>
                    <span asp-validation-for="Race" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group py-2">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group py-2 " >
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group py-2 mt-3">
                <input type="submit" value="Register" class="btn btn-primary" />
               <a class="btn btn-danger" asp-action="Index" asp-controller="Home">Back</a>
            </div>
        </form>


</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
