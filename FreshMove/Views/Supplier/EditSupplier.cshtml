@model FreshMove.Models.actors.Supplier

@{
    ViewData["Title"] = "Edit Supplier";
}

<div class="container mt-5">



    <form asp-action="EditSupplier">
        <h1> Edit Supplier </h1>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group mb-4">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group mb-4">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group mb-4">
            <label asp-for="PhysicalAddress" class="control-label"></label>
            <input asp-for="PhysicalAddress" class="form-control" />
            <span asp-validation-for="PhysicalAddress" class="text-danger"></span>
        </div>
        <div class="form-group py-2">
            <input type="submit" value="Update" class="btn btn-primary" />
            <a class="btn btn-danger" asp-action="Suppliers" asp-controller="Supplier">Back</a>
        </div>
    </form>


</div>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
