@model FreshMove.Models.products.EditProductViewModel
@{
    ViewData["Title"] = "Edit Product";


}

<div class="container mt-5">

    <form asp-action="EditProduct" enctype="multipart/form-data">
        <h1 class=""> Edit Product</h1>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input  asp-for="Id"value="@Model.Id" class="" hidden/>
        <input asp-for="ExistingImage" value="@Model.ExistingImage" hidden />
        <div class="form-group mb-4">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group mb-4">
            <label asp-for="productCode" class="control-label"></label>
            <input asp-for="productCode" class="form-control" />
            <span asp-validation-for="productCode" class="text-danger"></span>
        </div>
        <div class="form-group mb-4">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" class="form-control" rows="4"> </textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group mb-4">
            <label asp-for="Quantity" class="control-label"></label>
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <div class="form-group mb-4">
            <label asp-for="Price" class="control-label"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="CategoryID" class="control-label"></label>
            <select asp-for="CategoryID" class="form-control">

                @foreach (var category in ViewBag.Categories)
                {
                    <option value="@category.Id"> @category.Name</option>
                }
            </select>

            <span asp-validation-for="CategoryID" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="SupplierID" class="control-label"></label>
            <select asp-for="SupplierID" class="form-control">

                @foreach (var supplier in ViewBag.Supplier)
                {
                    <option value="@supplier.Id">@supplier.Name</option>
                }
            </select>

            <span asp-validation-for="SupplierID" class="text-danger"></span>
        </div>
        <div class="form-group mb-4">

            <img src="~/product/@Model.ExistingImage" alt="@Model.Name +@Model.Description" height="120px" width="120px" value="@Model.ExistingImage"/>
        </div>
        <div class="form-group mb-4">

            <label asp-for="productImage" class="control-label"></label>
            <input asp-for="productImage" class="form-control" type="file" accept="image/*" />
            <span asp-validation-for="productImage" class="text-danger"></span>
        </div>
        <div class="form-group ">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a class="btn btn-danger" asp-action="Products" asp-controller="Product">Back</a>

        </div>
    </form>

</div>

