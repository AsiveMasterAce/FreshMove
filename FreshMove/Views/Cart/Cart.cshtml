@model FreshMove.Models.Cart.CartViewModel
@{
    ViewData["Title"] = "Cart";
    Layout = "~/Views/Shared/_AuthUserLayoutcshtml.cshtml";
}

<div class="container-fluid mt-4 px-5">

    <div class="container">
        <div class="container align-self-center mt-5">
            <div class="row p-2">

                <div class="col-6 bg-grey rounded-top p-4 px-2 parent-container">
                    <div class="row mt-3">

                        <div class="col"><h4><b>Shopping Cart</b></h4></div>
                        <div class="col align-self-center text-right text-muted">No. items: </div>
                        <div class="px-2">
                            <hr class="mt-2" />
                        </div>

                    </div>


                    <div class="alert alert-warning" role="alert">
                        The List of Products is Empty
                    </div>

                    <div class="button-container">

                        <a class="btn btn-light w-100 start-0" asp-action="" asp-controller=""> <i class="bi bi-arrow-left"></i> Back To Shop</a>
                    </div>


                </div>
                <div class="col-6 bg-LightBlue rounded-top h-75 p-5">
                    <div class="mt-4">

                        <div class="col text-center"><h4><b>Summary</b></h4></div>
                        <hr />


                        <p class="text-muted">Items: </p>

                        <div class="mt-4">

                        

                
                        </div>

                        <div class="mt-4">

                            <h5>Promo code</h5>
                            <input asp-action="" asp-controller="" class="form-control" />

                        </div>
                        <div class="mt-5">
                            <div class="mt-5">

                                <hr />
                            </div>
                        </div>
                        <div class="mt-3">
                            <h5 class="text-muted">Total: 00:00</h5>


                        </div>
                        <div class="mt-5">

                            <a class="btn btn-black w-100" asp-action="" asp-controller="">Proceed</a>
                        </div>
                    </div>

                </div>



            </div>

    </div>
</div>

