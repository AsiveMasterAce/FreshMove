﻿
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FreshMove</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/LandingSlide.css" asp-append-version="true" />
    <!-- Option 1: Include in HTML -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css" integrity="sha384-b6lVK+yci+bfDmaY1u0zE8YYJt0TZxLEAFyYSLHId4xoVvsrQu3INevFKo+Xir8e" crossorigin="anonymous" />
    <link rel="stylesheet" href="~/FreshMove.styles.css" asp-append-version="true" />
</head>
    <body class="p-0 m-0">
        <main class="vw-100 vh-100 d-flex overflow-hidden">
            <section style="width: 45%; height: 100%">

                @if (ViewContext.HttpContext.Request.Path == "/Register/Admin")
                {
                    <img src="~/img/auth1.jpg" alt="Sign Up" class="w-100" />
                }
                else
                {
                    <img src="~/img/auth2.jpg" alt="Auth Illustration" class="w-100" />
                }
            </section>
            <section class="d-flex justify-content-center align-items-center flex-grow-1 min-vh-100">
                @RenderBody()
            </section>
        </main>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>