@using FreshMove.Models.users;
@using Microsoft.AspNetCore.Identity
@using FreshMove.Constants;
@inject UserManager<ApplicationUser> UserManager
@{
    var user = await UserManager.GetUserAsync(User);
}

<nav class="navside navside-expand-lg sticky-top order-2 order-lg-0 fixed-top bg-green">
    <div class="container invisible-scrollbar">

        @if (User.IsInRole(RoleConstants.Admin))
        {

            <a asp-action="Index" asp-controller="Admin" class="link-body d-none d-lg-inline text-primary">
                <svg class="gi gi-grayshift fs-4" width="2rem" height="2rem" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
