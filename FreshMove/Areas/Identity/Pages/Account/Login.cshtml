@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_AuthUserLayoutcshtml.cshtml";
}


<div class="container p-5">

           <div class ="text-center mb-5">
               <h1 style ="font-size: 90px; color:var(--Green);">Welcome</h1>
             <h1 style="font-size: 50px;">To</h1>
               
               <img src="~/img/logo/FreshMoveLogo.png" width="40%" />

           </div>
        
            <section>
                <form id="account" method="post">
                
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating mb-4">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-4">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                        <label asp-for="Input.Password" class="form-label"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div>
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="">
                        <button id="login-submit" type="submit" class="w-100 btn btn-primary mb-4">Log in</button>
                        <a class="w-100 btn btn-danger" asp-action="Index" asp-controller="Home">Back</a>
                    </div>
                    <div class="mt-3">
                        <p>
                            <a class="text-decoration-none text-info" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                          <a class="text-decoration-none text-info" asp-action="Customer" asp-controller="Register">Register as a new user</a>
                        </p>
                 
                    </div>
                </form>
            </section>
 

</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
